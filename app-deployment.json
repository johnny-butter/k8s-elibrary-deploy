{
  "apiVersion": "apps/v1",
  "kind": "Deployment",
  "metadata": {
    "name": "app-deployment",
    "namespace": "elibrary"
  },
  "spec": {
    "replicas": 1,
    "template": {
      "metadata": {
        "namespace": "elibrary",
        "labels": {
          "app": "elibrary"
        }
      },
      "spec": {
        "containers": [
          {
            "env": [
              {
                "name": "ALLOWED_HOSTS",
                "value": "*"
              },
              {
                "name": "SECRET_KEY",
                "valueFrom": {
                  "secretKeyRef": {
                    "name": "app-secret",
                    "key": "secret_key"
                  }
                }
              },
              {
                "name": "DB_ENGINE",
                "value": "django.db.backends.mysql"
              },
              {
                "name": "DB_NAME",
                "valueFrom": {
                  "secretKeyRef": {
                    "name": "app-secret",
                    "key": "db_name"
                  }
                }
              },
              {
                "name": "DB_USER",
                "value": "root"
              },
              {
                "name": "DB_PASSWORD",
                "valueFrom": {
                  "secretKeyRef": {
                    "name": "app-secret",
                    "key": "db_password"
                  }
                }
              },
              {
                "name": "DB_HOST",
                "value": "mysql-service"
              },
              {
                "name": "DB_PORT",
                "valueFrom": {
                  "secretKeyRef": {
                    "name": "app-secret",
                    "key": "db_port"
                  }
                }
              }
            ],
            "name": "elibrary-app",
            "args": [
              "bash",
              "-c",
              " python3 manage.py migrate && gunicorn --timeout=120 --workers=4 --bind :8000 eLibrary.wsgi:application"
            ],
            "image": "butter3126/elibrary",
            "ports": [
              {
                "containerPort": 8000
              }
            ]
          }
        ]
      }
    },
    "selector": {
      "matchLabels": {
        "app": "elibrary"
      }
    }
  }
}
